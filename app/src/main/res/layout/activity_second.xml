<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jesve.reto1_hackspace.SecondActivity"
    android:background="@drawable/megapolis_nights">

    <!-- Help Button -->
    <Button
        android:id="@+id/btn_help2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Help"
        android:textColor="@color/colorAccent"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <!-- New RelativeLayout -->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        android:background="@color/colorBackground"
        android:paddingTop="36dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="30dp">

        <!-- Text FULL NAME -->
        <TextView
            android:id="@+id/txt_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FULL NAME"/>

        <!-- EditText FULL NAME -->
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_fullname"
            android:hint="Enter your full Name"
            android:inputType="text"
            android:textSize="12sp"/>

        <!-- Text E-MAIL -->
        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_name"
            android:text="E-MAIL"
            android:paddingTop="30dp"/>

        <!-- EditText E-MAIL -->
        <EditText
            android:id="@+id/edt_email2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_email"
            android:inputType="textEmailAddress"
            android:hint="Your E-mail goes here"
            android:textSize="12sp"/>

        <!-- Text Passwors -->
        <TextView
            android:id="@+id/txt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_email2"
            android:text="Password"
            android:paddingTop="30dp"/>

        <!-- EditText Password -->
        <EditText
            android:id="@+id/edt_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_password"
            android:inputType="textPassword"
            android:hint="*********"
            android:textSize="12sp"/>

        <!-- Check Box Password -->
        <CheckBox
            android:id="@+id/Checkbox_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_password2"
            android:checked="false"
            android:text="I agree all statements in"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"/>

        <!-- Aun falta terminar de arreglar-->
        <TextView
            android:id="@+id/txt_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Checkbox_agree"
            android:paddingLeft="30dp"
            android:text="Terms of service"
            android:textColor="@color/colorButtonLoginIn"
            android:textSize="10sp" />

        <!-- Button Log in -->
        <Button
            android:id="@+id/btn_loginIn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorButtonLoginIn"
            android:textColor="@color/TextColorButton"/>

    </RelativeLayout>



</RelativeLayout>
